.header {
  position: relative;
  width: 100%;
  height: 33.333vh;
}
.header image {
  width: 100%;
  height: 100%;
}
.sign-in-info {
  position: absolute;
  width: 100%;
  height: 33.333vh;
  display: flex;
  align-items: center;
  top: 0;
  left: 0;
}
.sign-in-info .left {
  color: #FFFFFF;
  margin-left: 40rpx;
  flex: 1;
  display: flex;
}
.sign-in-info .left .integral-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.sign-in-info .left .number {
  font-size: 80rpx;
  margin-right: 10rpx;
}
.sign-in-info .right {
  background-color: #FFFFFF;
  color: #ADB838;
  font-size: 28rpx;
  border-radius: 50rem 0 0 50rem;
  padding: 10rpx 30rpx;
}
.sign-in-box {
  position: relative;
  background-color: #FFFFFF;
  margin-top: -90rpx;
  margin-bottom: 30rpx;
  width: 100%;
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.sign-in-box .sign-in-btn {
  width: 50%;
  border-radius: 50rem !important;
}
.banner {
  width: 100%;
  margin: 30rpx 0;
  border-radius: 8rpx;
}
.banner image {
  width: 100%;
}
.point-box {
  width: 49%;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  padding: 20rpx;
}

